// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id           String   @id @default(uuid()) @db.Uuid
  sessionId    String
  session      Session  @relation(fields: [sessionId], references: [id])
  duration     Int
  eventType    String
  hash         String // Artifact.Id
  sourceType   String
  creationDate DateTime @default(now())
}

model Session {
  id           String   @id
  teamId       String?  @db.Uuid
  team         Team?    @relation(fields: [teamId], references: [id])
  userId       String   @db.Uuid
  user         User     @relation(fields: [userId], references: [id])
  events       Event[]  @relation(map: "sessionId")
  creationDate DateTime @default(now())
}

model User {
  id           String     @id @default(uuid()) @db.Uuid
  username     String     @unique
  name         String
  email        String     @unique
  sessions     Session[]  @relation(map: "userId")
  tokens       Token[]    @relation(map: "userId")
  passwordHash String
  roles        String[]
  teams        Team[]     @relation(map: "userId")
  artifacts    Artifact[] @relation(map: "userId")
  creationDate DateTime   @default(now())
}

model Team {
  id           String     @id @default(uuid()) @db.Uuid
  name         String     @unique
  avatar       String?
  creationDate DateTime   @default(now())
  slug         String     @unique
  sessions     Session[]  @relation(map: "teamId")
  users        User[]     @relation(map: "teamId")
  artifacts    Artifact[] @relation(map: "teamId")
}

model Token {
  id           String    @id @default(uuid()) @db.Uuid
  hash         String    @unique
  name         String
  creationDate DateTime  @default(now())
  lastUseDate  DateTime?
  userId       String    @db.Uuid
  user         User      @relation(fields: [userId], references: [id])
}

model Artifact {
  id           String    @id
  teamId       String?   @db.Uuid
  team         Team?     @relation(fields: [teamId], references: [id])
  userId       String    @db.Uuid
  user         User      @relation(fields: [userId], references: [id])
  creationDate DateTime  @default(now())
  duration     Int       @default(0)
  contentLength Int      @default(0)
  hitCount     Int       @default(0)
  lastHitDate  DateTime? @default(now())
}
